<!DOCTYPE html>
<html>

<head>
	<title>Lego Collection</title>
	<meta charset="UTF-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
	<%- include('partials/navbar', {page: '/lego/sets'}) %>
	<br />

	<div class="container">
		<div class="row">
			<main class="col-md-12">

                <section class="bg-light text-center py-5">
                    <div class="container">
                        <h1 class="display-5 fw-bold">Collection</h1>
                        <p class="lead text-muted">Browse the entire collection. Click to filter by themes such as :</p>
                         
                    </div>
                </section>

                <% sets.forEach( set => { %>
                    <table class="table">
                     
                        <tbody>
                          <tr>
                            <td><div class="rounded" style="width: 8rem; height: 8rem; background-image: url(<%=set.img_url%>);
background-size: cover; background-position: center;"></div></td>
                            <td><%= set.name %> | <button type="button" class="btn btn-primary"><%= set.theme %></button></td>
                            <td><b>Year:</b> <%= set.year %> - <b>Parts: </b><%= set.num_parts %></td>
                            <td><a href="/lego/sets/<%=set.set_num%>"><button type="button" class="btn btn-secondary">Details</button></a></td>
                          </tr>
                       
                        </tbody>
                      </table>
                    
                <% }) %>
                
			</main>
		</div>
	</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>